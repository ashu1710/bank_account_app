<%= render 'layouts/user_header' %>
<div class="container">
	<div class="rows">
        <%= form_for(@transaction, html: {class: 'transaction_form'}) do |f| %>
            <%= hidden_field_tag :balance, current_user.account.acc_balance.to_i %>
        	<div class="col-md-12">
                <div class="form-row">
                    <div class="col-md-9">
                        <label for="card_number">Account Number</label>
                        <%= f.text_field :acc_number, class: 'form-control'%>
                    </div>

                    <div class="col-md-9">
                        <label for="card_number">IFSC Code</label>
                        <%= f.text_field :ifsc_code, class: 'form-control'%>
                    </div>

                    <div class="col-md-9">
                        <label for="card_number">Amount</label>
                        <%= f.text_field :amount, class: 'form-control'%>
                    </div>


                    <div class="col-md-12">
                        <%= f.submit 'Add', class: "btn btn-success btn-deposit" %>
                    </div>
                </div>
            </div>
        <% end %>
	</div>
</div>