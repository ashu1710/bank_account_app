<%= render 'layouts/user_header' %>

<div class="container">
  	<div class="row mt-3">
		<div class= "col-md-4">
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">My Balance</h5>
					<p class="card-text"><%= current_user.account.acc_balance.to_i %></p>
				</div>
			</div>
		</div>
		
		<div class= "col-md-4">
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">Total Withdrawal</h5>
					<p class="card-text"><%= @total_withdraw %></p>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">Total Deposite</h5>
					<p class="card-text"><%= @total_deposit %></p>
				</div>
			</div>
		</div>
	</div>
</div>